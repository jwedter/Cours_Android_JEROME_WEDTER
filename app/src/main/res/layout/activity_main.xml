<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTp01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tp01"
        android:layout_marginVertical="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTp02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tp02"
        android:layout_marginVertical="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonTp01" />

    <Button
        android:id="@+id/buttonTp03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tp03"
        android:layout_marginVertical="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonTp02"  />

    <Button
        android:id="@+id/buttonTp04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to04"
        android:layout_marginVertical="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonTp03"  />

</androidx.constraintlayout.widget.ConstraintLayout>